{
  "id": "burnout_survey_v1",
  "title": "Encuesta de Burnout y Estrés Laboral (versión simple)",
  "version": "1.0.0",
  "language": "es-AR",
  "description": "Instrumento breve inspirado en CBI/JD-R. Todas las preguntas son de opción múltiple en escala de 5 puntos. El puntaje final se normaliza a 0–100 (mayor = más riesgo).",
  "scale": {
    "id": "freq_5",
    "label": "Frecuencia (últimas 4 semanas)",
    "options": [
      { "value": 0, "label": "Nunca" },
      { "value": 1, "label": "Raramente" },
      { "value": 2, "label": "A veces" },
      { "value": 3, "label": "Frecuentemente" },
      { "value": 4, "label": "Siempre" }
    ]
  },
  "dimensions": [
    {
      "id": "personal_exhaustion",
      "name": "Agotamiento personal",
      "weight": 1.0
    },
    { "id": "workload_demands", "name": "Carga y demandas", "weight": 1.0 },
    { "id": "control_autonomy", "name": "Control y autonomía", "weight": 1.0 },
    { "id": "social_support", "name": "Apoyo social", "weight": 1.0 },
    { "id": "values_fit", "name": "Ajuste de valores", "weight": 1.0 }
  ],
  "scoring": {
    "scaleId": "freq_5",
    "reverseRule": "Para items con reverse=true, usar (4 - value).",
    "questionAggregation": "Promedio simple por dimensión (ponderado por 'weight').",
    "totalAggregation": "Promedio simple de las dimensiones (ponderado por 'weight').",
    "normalization": "score_0_100 = promedio * 25"
  },
